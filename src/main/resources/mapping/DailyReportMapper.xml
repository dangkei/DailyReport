<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bgp.report.mapper.DailyReportMapper">
 
    <resultMap id="BaseResultMap" type="com.bgp.report.entity.DailyReport">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="report_date" jdbcType="VARCHAR" property="reportDate" />
        <result column="sqkm" jdbcType="VARCHAR" property="sqkm" />
        <result column="sqkmWeek" jdbcType="VARCHAR" property="sqkmWeek" />
    </resultMap>
    
    <insert id="insert">
    	INSERT INTO dailyreport (<include refid="columns"></include>)
    VALUES (#{reportDate}, #{sqkm}, #{sqkmWeek}, #{dtTime}, #{paySB}, #{noPaySB}, #{captureTime}, #{dailyIn}, #{weeklyIn}, #{remark})
    </insert>
     
	<select id="getReportList" resultType="com.bgp.report.entity.DailyReport">
        select <include refid="columns"></include> from report 
    </select>
    
    <select id="count" parameterType="com.bgp.report.entity.DailyReport" resultType="int" >
        select count(*) from dailyreport 
        <where>
    	<if test="reportDate != null and !&quot;&quot;.equals(reportDate.trim())">
	    	and reportDate = '#{reportDate}'
	    </if>
	    <if test="sqkm != null and !&quot;&quot;.equals(sqkm.trim())">
	    	and sqkm like '#{sqkm}'
	    </if>
    </where>
    </select>
    
    <select id="getReportListByPage" parameterType="java.util.Map"  resultType="com.bgp.report.entity.DailyReport">
        select * from dailyreport 
    </select>
    
    <sql id="columns">report_date, sqkm, sqkm_week, dt_time,pay_sb,nopay_sb,capture_time,daily_in,weekly_in,remark</sql>
    
</mapper>